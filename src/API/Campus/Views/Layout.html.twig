        {% block content %}{% endblock %}
    </div>
    {% include "Includes/footer.html.twig" %}
    <script src="{{ app.request.basePath }}/Resources/bower_components/jquery/dist/jquery.min.js"></script>
    <script src="{{ app.request.basePath }}/Resources/bower_components/foundation/js/foundation.min.js"></script>
