    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{% block title %}{% endblock %}</title>
    <link rel="stylesheet" href="{{ app.request.basePath }}/Resources/stylesheets/app.css" />
    <script src="{{ app.request.basePath }}/Resources/bower_components/modernizr/modernizr.js"></script>
    {% block head %}{% endblock %}
</head>
<body>
    {% include "Includes/header.html.twig" %}
